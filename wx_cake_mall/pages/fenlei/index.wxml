<!--pages/fenlei/index.wxml-->

<!--顶部的筛选条件-->
<view class='filterv'>
  <!--全部-->
  <view class='filtercss' wx:if="{{id!=1}}" bindtap='chkfilter' data-id='1'>全部</view>
  <view class='chkfiltercss' wx:if="{{id==1}}" bindtap='chkfilter' data-id='1'>全部</view>

  <!--类别-->
  <view class='filtercss' bindtap='chkfilter' data-id='2'>
    {{kind}}
    <image src='/resources/down.png' class='smicon'></image>
  </view>

  <!--图标部分-->
  <view class='filtercss' bindtap='chkfilter' data-id='4'>
    <image src='/resources/showlist.png' class='icon' wx:if="{{!islist}}"></image>
    <image src='/resources/liebiao.png' class='icon' wx:if="{{islist}}"></image>
  </view>
</view>
<view style='height:80rpx;width:100%;'></view>


<!--左右列表数据-->
<block wx:for="{{cakelist}}" wx:for-index="x" wx:key="item" wx:if="{{!islist}}">

  <!--左侧的蛋糕-->
  <view class='lcakev' wx:if="{{x%2==0}}" bindtap='godetail' data-id='{{item.id}}'>
    <!--蛋糕图-->
    <view class='caketuv'>
      <image src='{{item.pic}}' class='caketu'></image>
    </view>
    <!--蛋糕名称-->
    <view class='cakename'>
      <text decode='true'>{{item.name}}</text>
    </view>
    <!--蛋糕甜度-->
    <view class='caketang'>
      <view class='tiantxt'>{{item.description_short}}</view>
    </view>
    <!--蛋糕的价格-->
    <view class='cakepricev'>
      <view class='originprice'></view>
      <view class='nowprice'>
        <image src='/resources/qian.png' class='qiancss'></image>
        <view class='qiantxt'>{{item.price}}</view>
      </view>
    </view>
  </view>

  <!--右侧的蛋糕-->
  <view class='rcakev' wx:else bindtap='godetail' data-id='{{item.id}}'>
    <!--蛋糕图-->
    <view class='caketuv'>
      <image src='{{item.pic}}' class='caketu'></image>
    </view>
    <!--蛋糕名称-->
    <view class='cakename'>
      <text decode='true'>{{item.name}}</text>
    </view>
    <!--蛋糕甜度-->
    <view class='caketang'>
      <view class='tiantxt'>{{item.description_short}}</view>
    </view>
    <!--蛋糕的价格-->
    <view class='cakepricev'>
      <view class='originprice'></view>
      <view class='nowprice'>
        <image src='/resources/qian.png' class='qiancss'></image>
        <view class='qiantxt'>{{item.price}}</view>
      </view>
    </view>
  </view>

</block>

<!--上下列表显示-->
<block wx:for="{{cakelist}}" wx:for-index="x" wx:key="item" wx:if="{{islist}}">
  <view class='listv' bindtap='godetail' data-id='{{item.id}}'>
    <view class='listtuv'>
      <image src='{{item.pic}}' class='listtu'></image>
    </view>
    <view class='listinfo'>
      <!--名称价格-->
      <view class='listone'>
        <view class='listname'>{{item.name}}</view>
        <view class='listprice'>
          <image src='/resources/qian.png' class='smqianico'></image>
          <view class='qiantxt'>{{item.price}}</view>
        </view>
      </view>
      <!--食材-->
      <view class='listtwo'>
        {{item.description_short}}
      </view>
      <!--甜度-->
      <view class='listfour'>
        规格:{{item.spec}}      
      </view>
      <!--操作按钮-->
      <view class='listfive'>  
        <view class=''></view>    
        <view class='bookbtn'>立即预订</view>
        <!--结束-->
      </view>
      <!--结束-->
    </view>
  </view>
</block>
<view style='height:20rpx;width:100%;'></view>

<!--选择类别-->
<view class="kindchoose" style="display:{{showkind}}">

  <block wx:for="{{kindlist}}" wx:key="item" wx:for-index="x">
    <view class='kindv' bindtap='chkkind' data-name="{{item.name}}" data-id='{{item.id}}'>{{item.name}}</view>
  </block>
</view>


<!--客服小图标-->
<button class='kefuv' open-type='contact'>
  <image src='/resources/kefu.png' class='kefuico'></image>
</button>