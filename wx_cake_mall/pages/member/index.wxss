.chkoptv {
  background: #fff;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx 20rpx;
}

.optv {
  width: 300rpx;
  height: 80rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
