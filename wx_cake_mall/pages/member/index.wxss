  border: 1rpx solid #ccc;
  line-height: 80rpx;
  border-radius: 20rpx;
}

.chooseoptv {
  width: 300rpx;
  height: 80rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  display: flex;
  border: 1rpx solid #feef27;
  line-height: 80rpx;
  border-radius: 20rpx;
  background-color: #feef27;
}

.qian {
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  font-size: 30rpx;
}

.fuzeng {
  width: 160rpx;
  height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #87d0e3;
}

/*支付按钮*/

.payforbtn {
  width: 40%;
