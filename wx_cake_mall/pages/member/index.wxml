<!--pages/member/index.wxml-->

<view class='backv'>
</view>

<view class="memberv">
  <view class='newcardv' style='background-image:url({{cardbackimg}});'>
    <view class='cardbodyv'>
      <view class='topv'>
        <view class='logov'>
          <image src='{{logoimg}}' class='logoimg'></image>
        </view>
        <view class='cardinfo'>
          <view class='shopname'>{{cardowner}}</view>
          <view class='title'>{{title}}</view>
        </view>
      </view>
      <view class='carddibu'>
        <text decode='true'>{{cardno}}</text>
      </view>
    </view>
  </view>
</view>

<view style='height:100rpx;width:100%;'></view>

<!--选择支付的对象-->
<view class='sendv'>
  <view class='sendtitle'>当前余额:</view>
  <view class='sendvv' bindtap='chkpaytype' data-id='1'>
    <view class='sendtype'>{{yue}}元</view>
  </view>
</view>

<!--选择支付的对象-->
<view class='sendv' style='display:none;'>
  <view class='sendtitle'>充值对象：</view>
  <view class='sendvv' bindtap='chkpaytype' data-id='1'>
    <icon type="success" size="25" color="#87D0E3" class='chksend' wx:if="{{paytype==1}}" />
    <icon type="circle" size="25" color="#ccc" class='nochksend' wx:if="{{paytype==2}}" />
    <view class='sendtype'>自我充值</view>
  </view>
  <view class='sendvv' bindtap='chkpaytype' data-id='2' style='display:none;'>
    <icon type="success" size="25" color="#87D0E3" class='chksend' wx:if="{{paytype==2}}" />
    <icon type="circle" size="25" color="#ccc" class='nochksend' wx:if="{{paytype==1}}" />
    <view class='sendtype'>他人代充</view>
  </view>
</view>

<!--充值卡号-->
<view class='paytype' wx:if="{{paytype==2}}">
  <view class='paytypetip'>充值卡号:</view>
  <view class='paytypeno'>
    <input type='text' class='cardnotxt' placeholder='请输入充值卡号' placeholder-class='carnotip' value='{{cardno}}' bindblur='getcardno' bindconfirm='getcardno' bindinput='getcardno'></input>
  </view>
</view>

<!--充值选项-->
<view class='chkoptv'>
  <block wx:for="{{optlist}}" wx:key="item">
    <view class="{{item.ischk?'chooseoptv':'optv'}}" bindtap='chkopt' data-id='{{item.id}}'>
      <view class='qian'>{{item.price}}元</view>
      <view class='fuzeng' wx:if="{{item.send!=0}}">赠{{item.send}}元</view>
      <view class='fuzeng' wx:if="{{item.send==0}}"></view>
    </view>
  </block>

  <view class='payforbtn' bindtap='payforopt'>立即支付</view>
</view>